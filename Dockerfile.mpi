FROM fedora:37

RUN dnf -y update \
    && dnf -y install \
        cmake \
        gcc-c++ \
        git \
        make \
        openmpi-devel \
    && dnf clean all

# copy the MICM code
COPY . /micm/

ENV PATH="${PATH}:/lib64/openmpi/bin"
ENV OMPI_ALLOW_RUN_AS_ROOT=1
ENV OMPI_ALLOW_RUN_AS_ROOT_CONFIRM=1

# build the library and run the tests
RUN mkdir /build \
      && cd /build \
      && cmake \
        -D ENABLE_CLANG_TIDY:BOOL=FALSE \
        -D ENABLE_MPI:BOOL=TRUE \
        ../micm \
      && make -j 8

WORKDIR /build