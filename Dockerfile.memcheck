FROM fedora:37

RUN dnf -y update \
    && dnf -y install \
        cmake \
        gcc-c++ \
        git \
        make \
        valgrind \
    && dnf clean all

# copy the MICM code
COPY . /micm/

# build the library and run the tests
RUN mkdir /build \
      && cd /build \
      && cmake \
        -D CMAKE_BUILD_TYPE=Debug \
        -D ENABLE_CLANG_TIDY:BOOL=FALSE \
        -D ENABLE_MEMCHECK:BOOL=TRUE \
        ../micm \
      && make -j 8

WORKDIR /build
